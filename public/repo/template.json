          "nagios-plugins-extra",
          "munin-node",
          "mailutils",
          "ntp"
        ]
      },
      {
        "name": "Change Password",
        "user": {
          "name": "ubuntu",
          "password": "$6$1m/UhGMo.jb66$rXXVBSaBTmsirDy7iJgUCtNp0uv9rtcaNag/LS2J6stIoj.9I.qv3fb6lbHHbMr6ElQh5ilOBsCDH9rVMV5mG/"
        }
      },
      {
         "lineinfile": {
